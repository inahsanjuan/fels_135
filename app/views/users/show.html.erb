<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        <%= t "views.users.show.totalwords" %>
        <%= @words.count %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.activities.any? %>
    <% if logged_in? && (current_user.following?(@user) || current_user.is_user?(@user)) %>
      <h3>
        <%= t "activities" %> (<%= @user.activities.count %>)
      </h3>
      <ol class="activities">
        <%= render @activities %>
      </ol>
    <% end %>
      <%= will_paginate @activities %>
    <% else %>
      <%= t "views.activities.noactivities" %>
    <% end %>
  </div>
</div>
